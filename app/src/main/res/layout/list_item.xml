<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/myrect"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:elevation="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/map_icon"
        app:layout_constraintTop_toBottomOf="@+id/txv_descripcion"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <ImageView
        android:id="@+id/imv_imagen"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:transitionName="shared_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toRightOf="@+id/imv_imagen"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorPrimary"
        app:layout_constraintHorizontal_bias="0.0"
        android:id="@+id/constraintLayout">

        <ImageView
            android:id="@+id/imv_estado"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/abc_btn_check_to_on_mtrl_015"
            android:tint="#5BC0BC"
            app:layout_constraintLeft_toRightOf="@+id/txv_titulo"
            app:layout_constraintTop_toTopOf="@+id/txv_titulo"
            app:layout_constraintBottom_toBottomOf="@+id/txv_titulo" />

        <TextView
            android:id="@+id/txv_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Robo a mano armada"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:layout_marginLeft="8dp"
            android:textSize="13dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/txv_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Christian Valencia"
            android:textSize="8dp"
            android:textColor="#FFF"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txv_titulo"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="8dp" />

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/txv_distrito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAN BORJA"
        android:textSize="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txv_descripcion"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toLeftOf="@+id/imageView2"
        android:layout_marginRight="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="04/10/2016"
        android:textSize="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txv_descripcion"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.501" />

    <TextView
        android:id="@+id/txv_descripcion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="10dp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/imv_tipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/abc_ic_menu_cut_mtrl_alpha"
        android:background="@drawable/background_flb_file"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"
        android:layout_marginTop="24dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        android:layout_marginEnd="8dp" />



</android.support.constraint.ConstraintLayout>